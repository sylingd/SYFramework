<class>
	<name>BaseSY</name>
	<namespace>sy</namespace>
	<description>请直接通过\Sy调用</description>
	<vars>
		<var><name>app</name><description>静态变量，应用配置</description></var>
		<var><name>appDir</name><description>静态变量，应用所在绝对路径</description></var>
		<var><name>siteDir</name><description>静态变量，本网站相对于网站根目录的路径</description></var>
		<var><name>frameworkDir</name><description>静态变量，框架所在绝对路径</description></var>
		<var><name>rootDir</name><description>静态变量，框架所在绝对路径</description></var>
		<var><name>mimeTypes</name><description>静态变量，从配置中读取的mimeTypes</description></var>
		<var><name>httpStatus</name><description>静态变量，从配置中读取的httpStatus</description></var>
		<var><name>routeParam</name><description>静态变量，路由参数名称</description></var>
		<var><name>debug</name><description>静态变量，调试模式开关</description></var>
		<var><name>isCli</name><description>静态变量，是否为CLI环境</description></var>
		<var><name>controller</name><description>静态变量，当前Controller</description></var>
	</vars>
	<methods>
		<method>
			<name>createApplicationInit</name>
			<title>初始化：创建Application（通用）</title>
			<description>创建Application，此函数供内部调用</description>
			<access>protected</access>
			<params>
				<param>
					<name>config</name>
					<type>mixed</type>
					<description>配置文件绝对路径（String）或配置内容（Array）</description>
				</param>
			</params>
		</method>
		<method>
			<name>createApplication</name>
			<title>初始化：创建网站应用</title>
			<description>创建网站应用</description>
			<access>public</access>
			<params>
				<param>
					<name>config</name>
					<type>mixed</type>
					<description>配置文件绝对路径（String）或配置内容（Array）</description>
				</param>
			</params>
		</method>
		<method>
			<name>createConsoleApplication</name>
			<title>初始化：创建控制台应用（即CLI模式）</title>
			<description>创建控制台应用（即CLI模式）</description>
			<access>public</access>
			<params>
				<param>
					<name>config</name>
					<type>mixed</type>
					<description>配置文件绝对路径（String）或配置内容（Array）</description>
				</param>
			</params>
		</method>
		<method>
			<name>httpStatus</name>
			<title>报错：HTTP状态</title>
			<description><![CDATA[将向浏览器发送相应的头信息，如果第二个参数为<code>TRUE</code>，则退出运行]]></description>
			<access>protected</access>
			<params>
				<param>
					<name>status</name>
					<type>int</type>
					<description>状态码</description>
				</param>
				<param>
					<name>end</name>
					<type>boolean</type>
					<description>是否结束运行</description>
				</param>
			</params>
		</method>
		<method>
			<name>router</name>
			<title>基本路由</title>
			<description><![CDATA[路由分发功能]]></description>
			<access>public</access>
		</method>
		<method>
			<name>autoload</name>
			<title>自动加载函数</title>
			<description><![CDATA[自动载入框架和应用的类库]]></description>
			<access>public</access>
			<params>
				<param>
					<name>className</name>
					<type>string</type>
					<description><![CDATA[完整的类名称]]></description>
				</param>
			</params>
		</method>
		<method>
			<name>createUrl</name>
			<title>创建URL</title>
			<description><![CDATA[创建URL]]></description>
			<access></access>
			<params>
				<param>
					<name>param</name>
					<type>string/array</type>
					<description><![CDATA[URL参数，支持仅Controller的URL或带有参数的URL]]></description>
				</param>
				<param>
					<name>ext</name>
					<type>string</type>
					<description><![CDATA[自定义扩展名，仅开启重写时有效]]></description>
				</param>
			</params>
			<return>String</return>
