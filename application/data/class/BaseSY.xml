					<type></type>
					<description><![CDATA[]]></description>
				</param>
			</params>
		</method>
		<method>
			<name></name>
			<title></title>
			<description><![CDATA[]]></description>
			<access></access>
			<params>
				<param>
					<name></name>
					<type></type>
					<description><![CDATA[]]></description>
				</param>
			</params>
